@{
    ViewBag.Title = "Home Page";
}


@Styles.Render("~/Content/css")
@Styles.Render("~/Content/dropzone-css")
<div>
    <p></p>
    <div class="row">

        <div class="col-md-4">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Arquivos</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm("FileUpload", "Home",
                       FormMethod.Post,
                       new
                       {
                           @class = "dropzone",
                           id = "dropzone-form",
                       }))
                    {
                        <div class="fallback">
                            <input name="file" type="file" multiple />
                        </div>
                    }
                </div><!-- /.box-body -->
            </div>

        </div>
    </div>


</div>

@section scripts {


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dropzone")

    <script type="text/javascript">
        Dropzone.options.dropzoneForm = {
            dictDefaultMessage: "Clique ou Arraste arquivos aqui para fazer o Upload",
            paramName: "file",
            maxFilesize: 20,
            maxFiles: 4,
            acceptedFiles: "image/*",
            dictMaxFilesExceeded: "Custom max files msg",
            headers: {
                'outrosDadosTeste': 123456789
            }
        };
    </script>
}